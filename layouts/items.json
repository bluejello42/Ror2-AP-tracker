                "content": [
                    {
                        "type": "itemgrid",
                        "item_margin": "10, 10",
                        "h_alignment": "left",
						"item_size": 4,
                        "rows": [
                            [
                                "Dios Best Friend",
								"Common item",
								"Uncommon item",          

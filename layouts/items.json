                        ]
                    }
                ]
            }
			,{
                "type": "group",
				"header": "scrap",
                "orientation": "Vertical",
                "margin": "0,0",
                "content": [
                    {
                        "type": "itemgrid",
                        "item_margin": "10, 10",
                        "h_alignment": "left",
						"item_size": 4,
                        "rows": [
                            ["Item scrap White",
								"Item scrap Green",
								"Item scrap Red",
